{
  "manifest_version": 2,
  "description": "intial upload",
  "name": "QuickDict",
  "version": "0.1",

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["script.js"]
    }
  ],

  "background": [
    {
      "scripts": ["background.js"],
      "persisent": false
    }
  ],
  "browser_action": {
    "default_title": "click me"
  },
  "icons": {
    "8": "./img/logo.png",
    "32": "./img/logo.png",
    "128": "./img/logo.png"
  }
}
